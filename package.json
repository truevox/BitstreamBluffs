{
  "name": "bitstream-bluffs",
  "version": "1.4.4",
  "type": "module",
  "description": "2D side-scrolling infinite sledder game",
  "scripts": {
    "build": "echo 'No build step'",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:puppeteer": "node ./node_modules/mocha/bin/mocha.js tests/puppeteer-tests.js --timeout 30000",
    "test:all": "npm run test && npm run test:puppeteer"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {},
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "testTimeout": 10000,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "devDependencies": {
    "chai": "^4.5.0",
    "express": "^4.21.2",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "mocha": "^10.8.2",
    "netlify-plugin-cache": "^1.0.3",
    "phaser": "^3.70.0",
    "puppeteer": "^21.11.0"
  }
}
